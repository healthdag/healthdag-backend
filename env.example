# * Environment Variables Template for HealthLease Hub Backend
# * Copy this file to .env and fill in your actual values

# ====================================================================================
# DATABASE CONFIGURATION
# ====================================================================================
DATABASE_URL="postgresql://healthlease:healthlease_password@localhost:5432/healthlease?schema=public"

# ====================================================================================
# APPLICATION CONFIGURATION
# ====================================================================================
NODE_ENV=development
PORT=3000

# ====================================================================================
# WEB3 CONFIGURATION (BlockDAG Network)
# ====================================================================================
# * BlockDAG RPC endpoint
RPC_URL=https://rpc.blockdag.network

# * Private key for blockchain transactions (keep secure!)
PRIVATE_KEY=your_blockdag_private_key_here

# * BlockDAG network (mainnet, testnet, etc.)
BLOCKDAG_NETWORK=mainnet

# ====================================================================================
# IPFS CONFIGURATION (Pinata)
# ====================================================================================
# * Pinata JWT token for IPFS operations
PINATA_JWT=your_pinata_jwt_token_here

# * Pinata gateway URL
PINATA_GATEWAY=https://gateway.pinata.cloud

# ====================================================================================
# JWT AUTHENTICATION
# ====================================================================================
# * Secret key for JWT token signing (use a strong, random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# * JWT token expiration time (15 minutes as per requirements)
JWT_EXPIRES_IN=15m

# ====================================================================================
# CORS CONFIGURATION
# ====================================================================================
# * Allowed origins for CORS (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ====================================================================================
# REDIS CONFIGURATION (Optional)
# ====================================================================================
# * Redis connection URL (if using Redis for caching)
REDIS_URL=redis://localhost:6379

# ====================================================================================
# LOGGING CONFIGURATION
# ====================================================================================
# * Log level (error, warn, info, debug)
LOG_LEVEL=info

# * Log file path
LOG_FILE=./logs/healthlease.log

# ====================================================================================
# SECURITY CONFIGURATION
# ====================================================================================
# * Rate limiting (requests per minute)
RATE_LIMIT_MAX=100

# * Session timeout (in minutes)
SESSION_TIMEOUT=60

# * Password hashing rounds (bcrypt)
BCRYPT_ROUNDS=12

# * Password minimum length
PASSWORD_MIN_LENGTH=8

# * Password maximum length
PASSWORD_MAX_LENGTH=128

# ====================================================================================
# MONITORING & HEALTH CHECKS
# ====================================================================================
# * Health check interval (in seconds)
HEALTH_CHECK_INTERVAL=30

# * Enable detailed health checks
DETAILED_HEALTH_CHECKS=true

# ====================================================================================
# DEVELOPMENT CONFIGURATION
# ====================================================================================
# * Enable debug mode
DEBUG=false

# * Enable API documentation
ENABLE_DOCS=true

# * Enable CORS for development
ENABLE_CORS=true
